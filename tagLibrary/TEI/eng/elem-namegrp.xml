<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../schemas/tagLibrary_elementDesc.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<div xmlns="http://www.tei-c.org/ns/1.0"
     xmlns:eg="http://www.tei-c.org/ns/Examples"
     xmlns:ead="http://ead3.archivists.org/schema/"
     xmlns:oai_dc="http://www.openarchives.org/OAI/2.0/oai_dc/"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:xi="http://www.w3.org/2001/XInclude"
     xml:lang="eng"
     xml:id="elem-namegrp"
     type="elementDocumentation">
   <head>
      <gi>namegrp</gi>
      <seg type="fullName">Name Group</seg>
   </head>
   <div type="summary">
      <p>An element for binding together multiple access element entries within an
                        <gi>indexentry</gi>.</p>
   </div>
   <div type="mayContain">
      <p>corpname, famname, function, genreform, geogname, name, occupation, persname, subject, title</p>
   </div>
   <div type="mayOccurWithin">
      <p>indexentry</p>
   </div>
   <div type="attributes">
      <table>
         <row>
            <cell>altrender</cell>
            <cell>Optional</cell>
         </row>
         <row>
            <cell>audience</cell>
            <cell>Optional (values limited to: external, internal)</cell>
         </row>
         <row>
            <cell>id</cell>
            <cell>Optional</cell>
         </row>
         <row>
            <cell>lang</cell>
            <cell>Optional</cell>
         </row>
         <row>
            <cell>script</cell>
            <cell>Optional</cell>
         </row>
      </table>
   </div>
   <div type="descriptionAndUsage">
      <p>Use <gi>namegrp</gi> to group multiple access elements that share the same
                        <gi>ref</gi>, <gi>ptr</gi>, or <gi>ptrgrp</gi>.</p>
   </div>
   <div type="availability">
      <p>Optional, not repeatable</p>
   </div>
   <div type="examples">
      <eg:egXML>
         <ead:index>
            <ead:indexentry>
               <ead:corpname>
                  <ead:part>Bach &amp; Bros.</ead:part>
               </ead:corpname>
               <ead:ref target="NonC21-2" show="replace" actuate="onrequest">(In non correspondence)</ead:ref>
            </ead:indexentry>
            <ead:indexentry>
               <ead:namegrp>
                  <ead:corpname>
                     <ead:part>Bacon and Lewis, Ltd.</ead:part>
                  </ead:corpname>
                  <ead:persname>
                     <ead:part>Levering, Alexander M.</ead:part>
                  </ead:persname>
                  <ead:persname>
                     <ead:part>Windom, Lucious</ead:part>
                  </ead:persname>
               </ead:namegrp>
               <ead:ref target="Cres1861" show="replace" actuate="onrequest">(1861 Apr. 8, ALS, to W.W., re: inquiry into what to do with unsold flour)</ead:ref>
            </ead:indexentry>
         </ead:index>
      </eg:egXML>
   </div>
</div>
